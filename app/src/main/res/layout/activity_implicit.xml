<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImplicitActivity">
    
    <EditText
        android:id="@+id/etUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://digicourse.id"
        android:layout_margin="15dp"
        />

    <Button
        android:id="@+id/btnOpenWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Website"
        android:layout_below="@id/etUrl"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/etShareTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Text to share"
        android:layout_margin="15dp"
        android:layout_below="@+id/btnOpenWeb"
        />

    <Button
        android:id="@+id/btnShareTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share this text"
        android:layout_below="@id/etShareTxt"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>